<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  
  <!-- common for all servlets -->
  <context-param>
  		<param-name>name</param-name>
  		<param-value>ATM</param-value>
  </context-param>
  <context-param>
  		<param-name>Field</param-name>
  		<param-value>Engineering</param-value>
  </context-param>
  
  
  <servlet>
  
  		<servlet-name>abc</servlet-name>
  		<servlet-class>com.config.ServletConfigDemo</servlet-class>
  		<!-- individual initial values for ServletConfigDemo(Servlet) -->
  		<init-param>
  			<param-name>name</param-name>
  			<param-value>Akki</param-value>
  		</init-param>
  		<init-param>
  			<param-name>Field</param-name>
  			<param-value>IT</param-value>
  		</init-param>
  		
  </servlet>
  <servlet-mapping>
  		<servlet-name>abc</servlet-name>
  		<url-pattern>/scd</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  
  		<servlet-name>xyz</servlet-name>
  		<servlet-class>com.config.Demo2</servlet-class>
  		
  		<!-- individual initial values for Demo2(Servlet) -->  		
  		<init-param>
  			<param-name>name</param-name>
  			<param-value>Akash</param-value>
  		</init-param>
  		<init-param>
  			<param-name>Field</param-name>
  			<param-value>CSE</param-value>
  		</init-param>
  		
  </servlet>
  <servlet-mapping>
  		<servlet-name>xyz</servlet-name>
  		<url-pattern>/demo2</url-pattern>
  </servlet-mapping>
  
</web-app>